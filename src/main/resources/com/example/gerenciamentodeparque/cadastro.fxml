<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gerenciamentodeparque.CadastroController"
            prefWidth="450" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #2980b9, #6dd5fa);">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="350">
        <Label text="Cadastro" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" />

        <TextField fx:id="txtNome" promptText="Nome completo"
                   style="-fx-background-radius: 8; -fx-padding: 8;" />

        <TextField fx:id="txtEmail" promptText="Email"
                   style="-fx-background-radius: 8; -fx-padding: 8;" />

        <TextField fx:id="txtCpf" promptText="CPF"
                   style="-fx-background-radius: 8; -fx-padding: 8;" />

        <PasswordField fx:id="txtSenha" promptText="Senha"
                       style="-fx-background-radius: 8; -fx-padding: 8;" />

        <TextField fx:id="txtTelefone" promptText="Telefone"
                   style="-fx-background-radius: 8; -fx-padding: 8;" />

        <Button fx:id="btnCadastrar" text="Cadastrar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;"
                prefWidth="200" />

        <Hyperlink fx:id="linkVoltarLogin" text="Voltar para o login"
                   style="-fx-text-fill: white;" />
    </VBox>
</AnchorPane>

